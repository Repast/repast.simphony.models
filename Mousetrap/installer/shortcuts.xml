<izpack:shortcuts version="5.0"
                  xmlns:izpack="http://izpack.org/schema/shortcuts"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://izpack.org/schema/shortcuts http://izpack.org/schema/5.0/izpack-shortcuts-5.0.xsd">

  <skipIfNotSupported/>
  
  <programGroup defaultName="Mousetrap" location="applications"/>
  
  <shortcut
            name="Mousetrap"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="$INSTALL_PATH\start_model.bat"
     		commandLine=""
     		workingDirectory="$INSTALL_PATH"
            description="This runs the model"
            iconFile="$INSTALL_PATH\Mousetrap\icons\model.bmp"
     		iconIndex="0"
     		initialState="noShow">
            
        <createForPack name="Model"/>
  </shortcut>
    
  <shortcut
            name="Documentation"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="$INSTALL_PATH\Mousetrap\docs\index.html"
            commandLine=""
            iconFile="%SystemRoot%\system32\SHELL32.dll"
     		iconIndex="23" 
     		workingDirectory="$INSTALL_PATH\docs"
            description="Model Documentation">

        <createForPack name="Documentation"/>
    </shortcut>

    <shortcut
            name="Mousetrap Uninstaller"
            programGroup="yes"
            desktop="no"
            applications="no"
            startMenu="no"
            startup="no"
            target="$INSTALL_PATH\Uninstaller\uninstaller.jar"
            commandLine=""
            workingDirectory="$INSTALL_PATH"
            iconFile="%SystemRoot%\system32\SHELL32.dll"
     		iconIndex="31"
            description="This uninstalls the model">
    	<createForPack name="Model"/>
    </shortcut>
    
</izpack:shortcuts>